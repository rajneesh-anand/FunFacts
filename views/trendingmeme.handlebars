<div class="section">
    <div class="row">
        {{#each memes}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content teal ">
                    <p class="white-text">{{this.title}}</p>
                </div>
                <div class="card-image">
                    <img src="{{{image this.preview}}}" alt="meme">

                </div>
                <div class="card-content">
                    <p>{{truncateString this.selftext 100}}</p>
                </div>
                <div class="card-action">
                    <a class="waves-effect waves-light btn" target="_blank" href="/">Read More</a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>